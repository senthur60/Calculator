<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.senthur_4695.calculator.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="right"
                android:text=""
                android:id="@+id/numText"
                android:textSize="30dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />




    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:textSize="30dp"
                android:gravity="right"


                android:id="@+id/numInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:text="clear"
                android:id="@+id/clear"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:text="del"
                android:id="@+id/del"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="9"
                android:id="@+id/num9"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="8"
                android:id="@+id/num8"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="7"
                android:id="@+id/num7"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="x"
                android:id="@+id/mul"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="6"
                android:id="@+id/num6"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="5"
                android:id="@+id/num5"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="4"
                android:id="@+id/num4"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="รท"
                android:id="@+id/div"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="3"
                android:id="@+id/num3"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="2"
                android:id="@+id/num2"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="1"
                android:id="@+id/num1"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="-"
                android:id="@+id/sub"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="."
                android:id="@+id/deci"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="0"
                android:id="@+id/num0"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="="
                android:id="@+id/equal"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:text="+"
                android:id="@+id/add"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
